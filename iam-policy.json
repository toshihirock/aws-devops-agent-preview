{
  "Id": "IamPolicyAutopilot",
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": ["dynamodb:GetItem"],
      "Resource": ["arn:aws:dynamodb:ap-northeast-1:853835738220:table/*"]
    },
    {
      "Effect": "Allow",
      "Action": ["kms:Decrypt"],
      "Resource": ["arn:aws:kms:ap-northeast-1:853835738220:key/*"],
      "Condition": {
        "StringEquals": {
          "kms:ViaService": ["dynamodb.ap-northeast-1.amazonaws.com"]
        }
      }
    }
  ]
}
